{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "jsx-quotes": "off",
    "arrow-parens": [2, "as-needed"],
    "react/forbid-prop-types": "off",
    "no-console": "off",
    "no-shadow": "off",
    "no-return-assign": "off"
  },
  "overrides": [
    {
      "files": ["src/pages/List.jsx", "src/pages/Novel.jsx"],
      "rules": {
        "react/no-array-index-key": "off"
      }
    },
    {
      "files": [
        "src/pages/user/Profile.jsx",
        "src/pages/admin/Admin.jsx",
        "src/pages/Login.jsx"
      ],
      "rules": {
        "no-param-reassign": "off"
      }
    }
  ]
}
